@model StudentPoral.Web.Models.Entities.Student

<h1>Edit Student</h1>
@if(Model is null)
{
    <p>NO STUDENT WAS FOUND IN THIS ID</p>
}
else{
<form method="post">
    <div class="mt-3">
        <label class="form-label">Id</label>
        <input type="text class=" force-control asp-for="Id" readonly/>
    </div>
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text class=" force-control asp-for="Name" readonly />
    </div>
    <div class="mt-3">
        <label class="form-label">Email</label>
        <input type="text class=" force-control asp-for="Email" />
    </div>
    <div class="mt-3">
        <label class="form-label">Phone</label>
        <input type="text class=" force-control asp-for="Phone" />
    </div>
    <div class="mt-3">
        <input type="checkbox" class="form-check-input id="Subscribed" asp-for="Subscribed" />
        <lable class="form-check-label" for="Subscribed">Subscribed</lable>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-danger ms-3 asp-action="Delete" asp-controller="Students">Delete</button>
    </div>
</form>
}
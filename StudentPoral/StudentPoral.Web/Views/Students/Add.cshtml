@model StudentPoral.Web.Models.AddStudentViewModel
<h1>Add Student</h1>
<form method="post">
<div class="mt-3">
    <label class="form-label">Name</label>
    <input type="text class="force-control asp-for="Name"/>
</div>
<div class="mt-3">
    <label class="form-label">Email</label>
    <input type="text class=" force-control asp-for="Email" />
</div>
<div class="mt-3">
    <label class="form-label">Phone</label>
    <input type="text class=" force-control asp-for="Phone" />
</div>
